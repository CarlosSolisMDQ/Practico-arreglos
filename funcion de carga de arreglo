void llenar_arreglo(int arr[], int size);

int main()
{
    int A[5] = {1,2,3,4,5};
    int size = 0;
    printf("Ingrese el tama√±o del arreglo: ");
    scanf("\n%i", &size);
    int B[size];

    llenar_arreglo(B, size);


    for (int i = 0; i < size; i++) {
        printf("\n%d", B[i]);
    }

    return 0;
}


void llenar_arreglo(int arr[], int size){
    int valor;
    for(int j = 0; j < size; j++ ){
        printf("\ningrese un valor:");
        scanf("%i", &valor);
        arr[j] = valor;
    }

}
